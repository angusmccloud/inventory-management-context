  "critical_rules": [
    "ALWAYS reference constitution before architectural decisions",
    "ALWAYS check AGENTS.md for feature-specific gotchas",
    "ALWAYS use KeyBuilder from entities.ts for DynamoDB keys",
    "ALWAYS use response helpers from response.ts for API responses",
    "ALWAYS use structured logger from logger.ts (no console.log)",
    "ALWAYS write tests first (test-first development)",
    "ALWAYS achieve 80% coverage on critical paths",
    "ALWAYS use explicit TypeScript types (no implicit any)",
    "ALWAYS include .js extensions in ES module imports"
  ],
  
  "patterns": {
    "dynamodb_keys": {
      "correct": "KeyBuilder.family(familyId)",
      "incorrect": "{ PK: `FAMILY#${familyId}`, SK: `FAMILY#${familyId}` }",
      "source": "entities.ts"
    },
    "dynamodb_queries": {
      "correct": "QueryPatterns.listMembers(familyId)",
      "source": "entities.ts"
    },
    "api_responses": {
      "correct": "successResponse(data)",
      "incorrect": "{ statusCode: 200, body: JSON.stringify(data) }",
      "source": "response.ts"
    },
    "logging": {
      "correct": "logger.info('message', { context })",
      "incorrect": "console.log('message')",
      "source": "logger.ts"
    },
    "imports": {
      "correct": "import { x } from './lib/y.js'",
      "incorrect": "import { x } from './lib/y'",
      "reason": "Node.js 24.x ES modules require .js extension"
    }
  },
  
  "testing_strategy": {
    "unit_tests": "Mock DynamoDB with aws-sdk-client-mock",
